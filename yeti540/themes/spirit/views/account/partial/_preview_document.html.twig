{% if file.getPrimaryFileSize() >= 52428800 %}
    <div class="alert alert-warning" role="alert">{{ t('document_can_not_be_previewed', 'Document can not be previewed as it is too big. Please download the file to view it.') }}</div>
	{% include '@themePath/account/partial/_preview_download.html.twig' %}
{% else %}
    <iframe src="{{ filePreviewerObj.getDocumentPreviewURL(file)|raw }}" height="700" width="100%" frameborder="0" style="border: 0px solid #ddd;" class="background-loader"></iframe>
{% endif %}